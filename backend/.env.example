# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置（预留）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devmentor
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT配置（预留）
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 微信公众号配置
WECHAT_APP_ID=your_wechat_app_id_here
WECHAT_APP_SECRET=your_wechat_app_secret_here
WECHAT_TOKEN=your_wechat_token_here
WECHAT_ENCODING_AES_KEY=your_wechat_encoding_aes_key_here
WECHAT_SERVER_URL=https://your-domain.com/api/wechat

# 微信小程序配置（预留）
MINI_PROGRAM_APP_ID=your_mini_program_app_id_here
MINI_PROGRAM_APP_SECRET=your_mini_program_app_secret_here

# 微信支付配置（预留）
WECHAT_MCH_ID=your_merchant_id_here
WECHAT_PAY_KEY=your_pay_key_here
WECHAT_CERT_PATH=./cert/apiclient_cert.pem
WECHAT_KEY_PATH=./cert/apiclient_key.pem

# 邮件服务配置（预留）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Redis配置（预留）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# 文件上传配置（预留）
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# API限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS配置
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# 安全配置
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# 第三方服务配置（预留）
# AI服务
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# 短信服务
SMS_ACCESS_KEY=your_sms_access_key_here
SMS_SECRET_KEY=your_sms_secret_key_here

# 对象存储服务
OSS_ACCESS_KEY=your_oss_access_key_here
OSS_SECRET_KEY=your_oss_secret_key_here
OSS_BUCKET=your_bucket_name
OSS_REGION=your_region

# 监控和分析
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# 开发环境配置
DEBUG=true
VERBOSE_LOGGING=true

# 生产环境配置
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false